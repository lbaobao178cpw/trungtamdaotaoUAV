# ============================================
# DATABASE CONFIGURATION
# ============================================
# MySQL/Aiven Database Connection
DB_HOST=your-database-host.aivencloud.com
DB_PORT=21321
DB_USER=avnadmin
DB_PASSWORD=your-database-password
DB_NAME=defaultdb
DB_SSL=true

# ============================================
# JWT & SECURITY
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=production

# ============================================
# CLOUDINARY CONFIGURATION (File Upload)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============================================
# EMAIL CONFIGURATION (Brevo/Sendinblue - OTP)
# ============================================
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=UAV Training System

# ============================================
# FRONTEND URLs (CORS Whitelist)
# ============================================
FRONTEND_URL=https://your-frontend-domain.vercel.app
ADMIN_URL=https://your-admin-domain.vercel.app
LOCALHOST_URL=http://localhost:5173,http://localhost:5174

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=104857600

# ============================================
# CORS ORIGINS (comma-separated)
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,https://your-frontend-domain.vercel.app,https://your-admin-domain.vercel.app
