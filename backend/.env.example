# ============================================
# DATABASE CONFIGURATION (Aiven MySQL)
# ============================================
DB_HOST=your-database-host.aivencloud.com
DB_USER=avnadmin
DB_PASS=your-database-password
DB_NAME=uav_db
DB_PORT=16538

# ============================================
# CLOUDINARY CONFIGURATION
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============================================
# EMAIL CONFIGURATION (Brevo - OTP)
# ============================================
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=your-sender-email@gmail.com

# ============================================
# FRONTEND URLs (CORS - Required for Production)
# ============================================
# Set these when deploying to Render/production
FRONTEND_URL=https://your-frontend.vercel.app
ADMIN_URL=https://your-admin.vercel.app

# ============================================
# CORS ORIGINS (comma-separated, required for frontend to work)
# ============================================
# Add all frontend domains here (Vercel, localhost, etc.)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,https://your-frontend-domain.vercel.app,https://your-admin-domain.vercel.app
